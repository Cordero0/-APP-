.recommend-like {
  width: 750rpx;
}
.recommend-like .title {
  height: 100rpx;
  width: 100%;
  padding-left: 28rpx;
  padding-right: 28rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.recommend-like .title .declaration {
  display: inline;
  height: 28rpx;
  width: 10rpx;
  margin-top: 36rpx;
  margin-right: 13rpx;
  background-color: #fe7f00;
}
.recommend-like .title text {
  line-height: 100rpx;
  font-size: 35rpx;
  font-weight: 600;
  color: black;
}
.recommend-like .recommend-like-content {
  padding-left: 18rpx;
  padding-right: 18rpx;
  width: 714rpx;
}
.recommend-like .recommend-like-content .content-item {
  padding-top: 27rpx;
  padding-bottom: 27rpx;
  border-bottom: 1px solid #eeeeee;
  height: 204rpx;
  width: 714rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.recommend-like .recommend-like-content .content-item .item-image {
  width: 207rpx;
  height: 155rpx;
  margin-right: 20rpx;
}
.recommend-like .recommend-like-content .content-item .text {
  width: 487rpx;
}
.recommend-like .recommend-like-content .content-item .text .text-title {
  font-size: 28rpx;
  line-height: 36rpx;
  color: black;
}
.recommend-like .recommend-like-content .content-item .text .detail {
  line-height: 50rpx;
  font-size: 24rpx;
  color: #333333;
}
.recommend-like .recommend-like-content .content-item .text .price {
  color: #fe7f00;
  font-size: 27rpx;
}

